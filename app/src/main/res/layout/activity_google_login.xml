<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".GoogleLogin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-70dp"
        android:fontFamily="@font/nova_round"
        android:text="Hey, There"
        android:textColor="@color/main"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/gogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/googlebtn"
        android:fontFamily="@font/nova_round"
        android:paddingStart="73dp"
        android:paddingTop="8dp"
        android:paddingEnd="54dp"
        android:paddingBottom="8dp"
        android:text="Sign in with Google"
        android:textColor="@color/main"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.44" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/gogle"
        app:layout_constraintStart_toStartOf="@+id/gogle"
        app:layout_constraintTop_toTopOf="@+id/gogle"
        app:srcCompat="@drawable/kij" />

</androidx.constraintlayout.widget.ConstraintLayout>